<form class="space-y-4" id="alumni" onsubmit="Login(this,event)">
    <div class="form-control">
        <label class="label">
            <span class="label-text">Email</span>
        </label>
        <input name="email" type="email" placeholder="Enter your username" class="input input-bordered w-full" required>
    </div>
    <div class="form-control">
        <label class="label">
            <span class="label-text">Password</span>
        </label>
        <input name="password" type="password" placeholder="Enter your password" class="input input-bordered w-full" required>
    </div>
    <div class="form-control mt-6">
        <input type="submit" class="btn btn-primary w-full" value="Login"></input>

    </div>
</form>
<script src="/js/Login.js"></script>