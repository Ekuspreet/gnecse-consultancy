
<div class="collapse collapse-arrow bg-base-200 rounded-none border border-emerald-300 gap-1 my-2">
    <input type="checkbox" id="collapse-= question.questionId %>" />
    <div class="collapse-title text-xl font-medium flex justify-between">
        <div>
            <div class="badge p-4 bg-emerald-600 font-bold">
                <%= project.puid %>
            </div>
            <%= project.data.title%> | Approved : <%= project.approvedAt.toLocaleDateString() %>
        </div>

        <div>
            <div class="actions">
                <!-- Add Buttons Here  -->


                <button class="btn btn-outline btn-sm btn-secondary " data-puid="<%= project.puid %>"
                    onclick="expressInterest(this)">Express Interest</button>
            </div>
        </div>
    </div>
    <div class="collapse-content">
        <div class="p-5 space-y-4">
            <!-- Project Title -->
            <h2 class="text-3xl font-bold">
                <%= project.data.title %>
            </h2>
    
            <!-- Project Description -->
            <p class="text-xl text-gray-200"><%= project.data.description %>
            </p>
    
            <!-- Tech Stack and Skills -->
            <% if (project.data.techStack || project.data.skills) { %>
            <p class="text-lg text-white">
                This project involves working with 
                <span class="text-emerald-600"><%= project.data.techStack || 'a versatile tech stack' %></span>. 
                The required skills include 
                <span class="text-emerald-600"><%= project.data.skills || 'adaptability and willingness to learn' %></span>.
            </p>
            <% } %>
    
            <!-- Dates -->
            <% if (project.data.startDate && project.data.deadline) { %>
            <p class="text-lg text-white">
                Starting from 
                <span class="text-emerald-600"><%= project.data.startDate %></span>, this project is expected to be completed by 
                <span class="text-emerald-600"><%= project.data.deadline %></span>.
            </p>
            <% } %>
    
            <!-- Features, Objectives, Outcomes -->
            <% if (project.data.features || project.data.objectives || project.data.outcomes) { %>
            <div class="text-lg text-white">
                <% if (project.data.features) { %>
                <p>Key features include: <span class="text-emerald-600"><%= project.data.features %></span>.</p>
                <% } %>
                <% if (project.data.objectives) { %>
                <p>The white objective is: <span class="text-emerald-600"><%= project.data.objectives %></span>.</p>
                <% } %>
                <% if (project.data.outcomes) { %>
                <p>Expected outcomes are: <span class="text-emerald-600"><%= project.data.outcomes %></span>.</p>
                <% } %>
            </div>
            <% } %>
    
            <!-- Consulting Hours and Communication -->
            <% if (project.data.consultingHours || project.data.communication) { %>
            <p class="text-lg text-white">
                We'll allocate <span class="text-emerald-600"><%= project.data.consultingHours %></span> hours per week for consulting, and prefer to communicate via 
                <span class="text-emerald-600"><%= project.data.communication %></span>.
            </p>
            <% } %>
    
            <!-- Project Type -->
            <% if (project.data.projectType) { %>
            <p class="text-lg text-white">
                This is a <span class="text-emerald-600"><%= project.data.projectType %></span> project.
            </p>
            <% } %>
        </div>
    </div>
    

</div>