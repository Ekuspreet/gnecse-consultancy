<div class="flex items-center bg-base-200 rounded-none border border-teal-600 gap-4 my-2 p-4">
    <!-- Project Details -->
    <div
    class="radial-progress bg-teal-600 text-teal-100 border-teal-100 font-bold"
    style="--value:  
            <%= project.progress %>
    
    ;  --thickness: .4rem;"
    role="progressbar">
    <%= project.progress %>
    %
  </div>

    <div class="flex flex-col gap-2">
        <div class="badge p-2 bg-teal-500 text-white text-md font-bold">
            <%= project.puid %>
        </div>
        <h2 class="text-xl font-semibold">
            <%= project.data.title %>
        </h2>
        <p class="text-md text-gray-300">
            <%= project.data.description %>
        </p>
        <p class="text-md font-medium text-gray-400">
            Expected Completion Date: <span class="text-teal-500"><%= project.data.deadline %></span>
        </p>
    </div>
</div>
