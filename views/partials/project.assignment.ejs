<div class="collapse collapse-arrow bg-base-200 rounded-none border border-primary gap-1 my-2">
    <input type="checkbox" id="collapse-<%= project.puid %>" />
    <div class="collapse-title text-xl font-medium flex justify-between">
        <div>
            <div class="badge p-4 bg-primary">
                <%= project.puid %>
            </div>
            <%= project.data.title %>
        </div>

        <div>
            <div class="actions">
                <!-- Add Buttons Here  -->
            </div>
        </div>
    </div>
    <div class="collapse-content">
        <div class="p-3 ">
            <!-- Project Title -->
            <h2 class="text-3xl font-bold">
                <%= project.data.title %>
            </h2>

            <!-- Project Description -->
            <div class="text-xl text-gray-200 mb-4">
                <%= project.data.description %>
            </div>


            <!-- Tech Stack and Skills -->
            <span class="text-lg text-white">
                <% if (project.data.techStack) { %>
                This project involves working with 
                <span class="text-primary"><%= project.data.techStack %></span>.
                <% } %>
                <% if (project.data.skills) { %>
                The required skills include 
                <span class="text-primary"><%= project.data.skills %></span>.
                <% } %>
            </span>

            <!-- Dates -->
            <% if (project.data.startDate && project.data.deadline) { %>
            <span class="text-lg text-white">
                Starting from 
                <span class="text-primary"><%= project.data.startDate %></span>, this project is expected to be completed by 
                <span class="text-primary"><%= project.data.deadline %></span>.
            </span>
            <% } %>

            <!-- Features, Objectives, Outcomes -->
            <% if (project.data.features || project.data.objectives || project.data.outcomes) { %>
            <span class="text-lg text-white">
                <% if (project.data.features) { %>
                <span>Key features include: <span class="text-primary"><%= project.data.features %></span>.</span>
                <% } %>
                <% if (project.data.objectives) { %>
                <span>The white objective is: <span class="text-primary"><%= project.data.objectives %></span>.</span>
                <% } %>
                <% if (project.data.outcomes) { %>
                <span>Expected outcomes are: <span class="text-primary"><%= project.data.outcomes %></span>.</span>
                <% } %>
            </span>
            <% } %>

            <!-- Consulting Hours and Communication -->
            <% if (project.data.consultingHours || project.data.communication) { %>
            <span class="text-lg text-white">
                We'll allocate <span class="text-primary"><%= project.data.consultingHours %></span> hours per week for consulting, and prefer to communicate via 
                <span class="text-primary"><%= project.data.communication %></span>.
            </span>
            <% } %>

            <!-- Project Type -->
            <% if (project.data.projectType) { %>
            <span class="text-lg text-white">
                This is a <span class="text-primary"><%= project.data.projectType %></span> project.
            </span>
            <% } %>

            <div class="divider">Select Mentor</div>





            
            <!-- Display Interests Array as Radio Buttons using Join -->
            <% if (project.interests && project.interests.length > 0) { %>
            <form onsubmit="assignProject(this,event)" data-puid = "<%= project.puid %>">
                <div class="mt-4">
                    <h3 class="text-xl font-bold ">Select Mentor:</h3>
                    <div class="my-3">
                        <% project.interests.forEach((interest) => { %>
                        <input 
                            class="join-item btn  h-auto p-3 border border-primary" 
                            type="radio" 
                            name="mentor" 
                            value="<%= interest.staff %>"
                            aria-label="<%= interest.staff %> : Title: <%= interest.details.title %> . Description: <%= interest.details.description %>"
                            required 
                        />
                        <% }) %>
                        
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="mt-4">
                    <button 
                        type="submit" 
                        class="btn btn-primary w-full"
                    >
                        Submit
                    </button>
                </div>
            </form>
            <% } else { %>
            <p class="text-lg text-white">No interests found.</p>
            <% } %>
        </div>
    </div>
</div>



